<%= simple_form_for(@restaurant) do |f| %>
  <h2><%= f.input :name %> </h2>
  <p><%= f.input :address %></p>
  <p><%= f.input :phone_number %></p>
  <p><%= f.input :category %></p>
  <p><%= f.submit %></p>
<% end %>

<%= link_to 'Back', restaurants_path %> |
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>
